@page
@model WebClient.Pages.admin.IndexModel

<div class="text-center">
    <h1 class="title text-success fw-bold" style="margin-top: 9px;">Admin Dashboard</h1>

    <!-- Card chứa các nút admin -->
    <div class="card" style="width: 900px; margin: auto; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <div class="card-header bg-success text-white">
            Admin Options
        </div>
        <div class="card-body text-center">
            <table class="table-custom w-100">
                <tbody>
                    <tr>
                        <td>
                            <a href="@Url.Page("ViewDistribution")" class="text-decoration-none text-dark fw-semibold d-block p-2" style="border-bottom: 1px solid #ddd;">
                                View Distribution Table
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Page("/admin/GradeCategoryManager")" class="text-decoration-none text-dark fw-semibold d-block p-2" style="border-bottom: 1px solid #ddd;">
                                Grade Category Manager
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Page("/admin/Course")" class="text-decoration-none text-dark fw-semibold d-block p-2" style="border-bottom: 1px solid #ddd;">
                                Distribute Grade
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Page("/admin/Class")" class="text-decoration-none text-dark fw-semibold d-block p-2" style="border-bottom: 1px solid #ddd;">
                                Create Class
                            </a>
                        </td>
                    </tr>
                    <!-- Thêm các mục khác nếu cần -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .title {
        font-size: 1.8em;
        color: #2c6e49;
    }

    .table-custom {
        width: 100%;
        margin: auto;
        border-collapse: collapse;
    }

        .table-custom td {
            padding: 12px;
        }

        .table-custom tr:not(:last-child) td {
            border-bottom: 1px solid #ddd;
        }

    .card {
        border: none;
        border-radius: 8px;
        overflow: hidden;
    }

    .card-header {
        font-weight: bold;
        text-align: center;
    }
</style>
