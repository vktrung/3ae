@page
@model WebClient.Pages.admin.CourseModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-5 p-4 bg-light rounded shadow-sm">
    <h2 class="mb-4 text-center">Course List</h2>

    <!-- Form thêm khóa học mới -->
    <form method="post" class="mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <input asp-for="NewCourse.Code" class="form-control" placeholder="Course Code" />
                <span asp-validation-for="NewCourse.Code" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <input asp-for="NewCourse.Name" class="form-control" placeholder="Course Name" />
                <span asp-validation-for="NewCourse.Name" class="text-danger"></span>
            </div>
            <div class="col-md-4 d-grid">
                <button type="submit" class="btn btn-success rounded-pill">Add Course</button>
            </div>
        </div>
    </form>

    <!-- Bảng danh sách khóa học -->
    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Course Code</th>
                <th scope="col">Course Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <th scope="row">@course.Id</th>
                    <td>@course.Code</td>
                    <td>@course.Name</td>
                    <td>
                        <a href="@Url.Page("/admin/Distribute", new { courseId = course.Id, courseName = course.Name })" class="btn btn-primary btn-sm rounded-pill px-3">
                            Distribute Grade
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-4">
        <a class="btn btn-secondary rounded-pill px-4" href="/admin/Index">Back to Home</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    h2 {
        font-weight: 600;
        color: #343a40;
    }

    .form-control {
        border-radius: 0.25rem;
    }

    .table {
        background-color: #ffffff;
    }

    .table-bordered th,
    .table-bordered td {
        border: 1px solid #dee2e6;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .table-dark th {
        color: #ffffff;
        background-color: #343a40;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .rounded-pill {
        border-radius: 50px !important;
    }
</style>
